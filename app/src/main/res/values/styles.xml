<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/positive_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="NegativeButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/negative_button_bg</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

</resources>
